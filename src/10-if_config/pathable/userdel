#!/usr/bin/env zsh

declare_parcel_as_script_with_stdin <<'/---'
Configure `userdel`, an external command removing an existing local user.
/---

# ....................{ CD                                 }....................
declare_global_with_stdin list ZESHY_OPTIONS_USERDEL <<'/---'
`userdel` options for `zeshy`-specific user removers (e.g., remove_user:()).
/---
ZESHY_OPTIONS_USERDEL=()

declare_global_with_stdin list ZESHY_OPTIONS_USERDEL_IF_INTERACTIVE <<'/---'
`userdel` options when run interactively.
/---
ZESHY_OPTIONS_USERDEL_IF_INTERACTIVE=()

declare_global_with_stdin list ZESHY_OPTIONS_USERDEL_IF_NONINTERACTIVE <<'/---'
`userdel` options when run non-interactively.
/---
ZESHY_OPTIONS_USERDEL_IF_NONINTERACTIVE=()
