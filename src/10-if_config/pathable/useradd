#!/usr/bin/env zsh

declare_parcel_as_script_with_stdin <<'/---'
Configure `useradd`, an external command adding a new local user.
/---

# ....................{ OPTIONS                            }....................
declare_global_with_stdin list ZESHY_OPTIONS_USERADD <<'/---'
`useradd` options for `zeshy`-specific user adders (e.g., :make_user()).
/---
ZESHY_OPTIONS_USERADD=()

declare_global_with_stdin list ZESHY_OPTIONS_USERADD_IF_INTERACTIVE <<'/---'
`useradd` options when run interactively.
/---
ZESHY_OPTIONS_USERADD_IF_INTERACTIVE=()

declare_global_with_stdin list ZESHY_OPTIONS_USERADD_IF_NONINTERACTIVE <<'/---'
`useradd` options when run non-interactively.
/---
ZESHY_OPTIONS_USERADD_IF_NONINTERACTIVE=()
