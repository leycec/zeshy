#!/usr/bin/env zsh

declare_parcel_as_script_with_stdin <<'/---'
Configure `ls`, an external command listing passed paths.
/---

# ....................{ OPTIONS ~ gnu                      }....................
declare_global_with_stdin list ZESHY_OPTIONS_LS <<'/---'
`ls` options for `zeshy`-specific path listers (e.g., list_path()) under
operating systems supporting the GNU toolchain.
/---
ZESHY_OPTIONS_LS=()

declare_global_with_stdin list ZESHY_OPTIONS_LS_IF_INTERACTIVE <<'/---'
`ls` options when run interactively under operating systems supporting the GNU
toolchain.
/---
ZESHY_OPTIONS_LS_IF_INTERACTIVE=(
    --all
    --color=always
    --group-directories-first
    --human-readable
    --indicator-style=classify
    --quoting-style=shell
    --time-style=long-iso

    # Sort in a version-aware lexicographic manner, by default. Note that such
    # sort order is only a default and hence overridden by "--sort=" options in
    # subsequent lists (e.g., ${ZESHY_OPTIONS_LS_SORTED_BY_MTIME_IF_OS_GNU}).
    --sort=version
)

declare_global_with_stdin list ZESHY_OPTIONS_LS_IF_NONINTERACTIVE <<'/---'
`ls` options when run non-interactively under operating systems supporting the
GNU toolchain.
/---
ZESHY_OPTIONS_LS_IF_NONINTERACTIVE=()

declare_global_with_stdin list ZESHY_OPTIONS_LS_IF_CONCISE <<'/---'
`ls` options for `zeshy`-specific non-verbose path listers (e.g., list_path())
under operating systems supporting the GNU toolchain.
/---
ZESHY_OPTIONS_LS_IF_CONCISE=(
    --format=vertical
)

declare_global_with_stdin list ZESHY_OPTIONS_LS_IF_VERBOSE <<'/---'
`ls` options for `zeshy`-specific verbose path listers (e.g.,
list_path_verbosely()) under operating systems supporting the GNU toolchain.
/---
ZESHY_OPTIONS_LS_IF_VERBOSE=(
    --format=long
)

declare_global_with_stdin list ZESHY_OPTIONS_LS_IF_RECURSIVE <<'/---'
`ls` options for `zeshy`-specific recursive path listers (e.g.,
list_path_recursive()) under operating systems supporting the GNU toolchain.
/---
ZESHY_OPTIONS_LS_IF_RECURSIVE=(
    --format=long
    --recursive
)

declare_global_with_stdin list ZESHY_OPTIONS_LS_SANS_CONTENT_IF_OS_GNU <<'/---'
`ls` options for `zeshy`-specific path listers listing directories themselves
rather than the files or subdirectories such directories contain (e.g.,
:list_path_verbose_sans_content()) under operating systems supporting the GNU
toolchain.
/---
ZESHY_OPTIONS_LS_SANS_CONTENT_IF_OS_GNU=(
    --directory
)

declare_global_with_stdin list ZESHY_OPTIONS_LS_SORTED_BY_MTIME_IF_OS_GNU <<'/---'
`ls` options for `zeshy`-specific path listers sorting paths by mtime (e.g.,
:list_path_verbose_sans_content_sorted_by_mtime()) under operating systems
supporting the GNU toolchain.
/---
ZESHY_OPTIONS_LS_SORTED_BY_MTIME_IF_OS_GNU=(
    --sort=time
)
