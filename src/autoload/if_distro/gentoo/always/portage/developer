#!/usr/bin/env zsh
# ====================[ developer                          ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Portage Developer, handling development of the Gentoo package
# repository and overlays.

# ....................{ GETTERS                            }....................
# void check_portage(char *repository_dir = get_current_dir())
#
# Check the passed Portage repository (defaulting to the repository containing
# the current directory), for quality assurance.
check_portage() {
    die_unless_at_most_one_arg 'expected optional dirname'
    
    if is_no_args; then
        repoman
    else
        #FIXME: If this becomes a common idiom, it'd be nice to add a new
        #run_under_dir() function: e.g.,
        #run_under_dir "${1}" repoman
        set_current_dir "${1}"
        {
            repoman
        } always {
            restore_current_dir
        }
    fi
}

# ....................{ WASTELANDS                         }....................

