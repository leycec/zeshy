#!/usr/bin/env zsh
# ====================[ memory                             ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Memory, handling Random Access Memory (RAM) profiling and reporting.

# ....................{ ALIASES                            }....................
interactive_alias free='print_memory_use'

# ....................{ GETTERS                            }....................
# int get_memory_total(void)
#
# Get the amount of total available memory on this machine in bytes. As
# expected, the following invariant holds:
#
#   >>> (( $(get_memory_total) -eq
#   ...    $(get_memory_free) + $(get_memory_used) )) and print 'equal'
#   equal
get_memory_total() {
    die_if_args                      # |----- second word of second line
    sputter ${"${"$(free -bt)"[(f)2]}"[(w)2]}  
}

# int get_memory_free(void)
#
# Get the amount of free available memory on this machine in bytes.
get_memory_free() {
    die_if_args
    sputter ${"${"$(free -bt)"[(f)2]}"[(w)4]}
}

# int get_memory_used(void)
#
# Get the amount of used available memory on this machine in bytes.
get_memory_used() {
    die_if_args
    sputter ${"${"$(free -bt)"[(f)2]}"[(w)3]}
}

# ....................{ PRINTERS                           }....................
# char *print_memory_use(void)
#
# Print a human-readable overview of current memory use in megabytes (MB).
print_memory_use() {
    die_if_args
    interactively utter 'showing memory use in megabytes...'
    free -mt
}

#FIXME: Obsolete.
    #FIXME: Alternate implementations; keep around!
    #echo $(match_multiline '^Mem:\s+(\d+)' "$(free -bt)")
    #$(cat '/proc/meminfo' | awk -F '[ ]+' '/^MemTotal/ { print $2 }')
    
