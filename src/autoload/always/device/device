#!/usr/bin/env zsh
# ====================[ device                             ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Device, implementing device and device file-handling.

# ....................{ EXCEPTIONS                         }....................
# void die_unless_device_file(char *filename, char *error_message = '')
#
# Raise an exception unless the passed device file exists.
die_unless_device_file() {
    die_unless_one_or_two_arguments\
        'expected one filename and optional error message'
    string filename="${1}"
    is_device_file "${filename}" or
        die "${2:-\"${filename}\" not found or not a device file}"
}

# ....................{ TESTS                              }....................
# bool is_device_file(char *pathname)
# 
# Return true if the passed path is an existing device file (i.e., either block-
# or character-special).
is_device_file() {
   die_unless_one_argument 'expected exactly one pathname'
   is -b "${1}" or -c "${1}" si
}

# ....................{ GETTERS                            }....................
# char *get_first_device_file(char *filename1, *filename2, ...)
#
# Get the absolute path of the first device file in the passed list of filenames
# that exists or raise an exception if no such file exists.
get_first_device_file() {
    # Dismantled, this is:
    #
    # * "-", resolving symbolic links prior to matching.
    # * "%", matching device files.
    get_first_path_matching_glob_qualifiers\
        'a device file' 'device files'\
        '-%' "${@}"
}

