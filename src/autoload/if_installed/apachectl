#!/usr/bin/env zsh
# ====================[ apachectl                          ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Apache HTTP Server.

# ....................{ PRINTERS                           }....................
# char *print_apache2_info(void)
#
# Print Apache-specific metadata, including:
#
# * Version.
# * Compile-time build parameters.
# * Compile-time static modules.
# * Dynamic shared modules (i.e., DSOs).
print_apache2_info() {
    die_unless_no_arguments
    
    # Temporary file to which we write Apache output.
    string apachectl_output_file=$(which_temporary_file 'print_apache2_info')
    
    # Append Apache-specific output to this file.
    apachectl -V  >> "${apachectl_output_file}"
    print         >> "${apachectl_output_file}"
    apachectl -MS >> "${apachectl_output_file}"
    print         >> "${apachectl_output_file}"
    apachectl fullstatus >> "${apachectl_output_file}"

    # Show it. Kill it.
    page "${apachectl_output_file}"
    rm   "${apachectl_output_file}"
}

# ....................{ TAILERS                            }....................
tail_apache2_access_log() {
    die_unless_no_arguments
    run_as_superuser tail -f -n "${get_shell_terminal_height}"\
        '/var/log/apache2/access_log'
}

tail_apache2_error_log() {
    die_unless_no_arguments
    run_as_superuser tail -f -n "${get_shell_terminal_height}"\
        '/var/log/apache2/error_log'
}

