# Crontab.
alias crontab="EDITOR=vim crontab"

crontab-edit() {
    if [[ "$USER" = "root" ]]; then
        sudo vim /etc/crontab
        /etc/init.d/vixie-cron restart
    else
        vim     "${HOME}/.crontab"
        crontab "${HOME}/.crontab"
        crontab -l
    fi
}

