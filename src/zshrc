# DHCP.
alias dhcpcd="\dhcpcd --timeout 24 --nohook ntp.conf --noipv4ll"

dhcpcd-rebind() {
  if [ -n "$1" ]
  then IFACE="$1"
  else IFACE="eth0"
  fi

  dhcpcd --rebind $IFACE
}

dhcpcd-test() {
  if [ -n "$1" ]
  then IFACE="$1"
  else IFACE="eth0"
  fi

  dhcpcd --debug --test $IFACE
}

