lyx() {
  # Ensure LyX's temporary path exists prior to running LyX. Oddly, it does not
  # ensure this, itself.
  local  TEMP_PATH="${HOME}/tmp/lyx"
  [ -d "$TEMP_PATH" ] || mkdir "$TEMP_PATH"

  command lyx $* &
}

