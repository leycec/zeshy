    export ZESHY_HOME=$(readlink --canonicalize-existing $(dirname "${zshrc_path}"))

# Import Zeshy Core, if needed.
[[ $(whence -w import) =~ ': function' ]] || source "${ZESHY_HOME}/zeshy/core"

# Inform the user that this script is being imported.
utter_import "${zshrc_path}"

# ....................{ DEPENDENCIES                       }....................
