#!/usr/bin/env zsh
# ====================[ dot2tex                            ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy dot2tex. This Zeshy component handles "dot2tex" functionality, a
# command-line utility for converting GraphViz graphs to LaTeX format.

# ....................{ IMPORTS                            }....................
zimport zeshy/file/file
zimport zeshy/file/mime

# ....................{ FUNCTIONS                          }....................
# void dot2tex2pdf(char *filename)
#
# Convert a GraphViz graph to PDF format.
dot2tex2pdf() {
    # Ensure sanity.
    die_unless_one_argument 'expected exactly one filename'
    local dot_file="${1}"
    [[ "${dot_file}" == *.dot ]] || die "\"${dot_file}\" not a dot file"

    # Strip the basename from the passed filename and concoct new filenames.
    local basename="$(get_filename_sans_filetype "${dot_file}")"
    local pdf_file="${basename}.pdf"
    local tex_file="${basename}.tex"
    
    utter "converting \"${dot_file}\" to \"${tex_file}\"..."
    try dot2tex --output "${tex_file}" "${dot_file}"

    # Do not "try" this, since "pdflatex" appears to often return failure on
    # success. Oh, this is odd.
    utter "converting \"${tex_file}\" to \"${pdf_file}\"..."
    pdflatex -interaction=batchmode "${tex_file}"
}

# void dot2tex2pdf_view(char *filename)
#
# View a GraphViz graph after conversion to PDF format.
dot2tex2pdf_view() {
    # Ensure sanity.
    die_unless_one_argument 'expected exactly one filename'
    local dot_file="${1}"
    dot2tex2pdf "${dot_file}"
    [[ "${dot_file}" == *.dot ]] || die "\"${dot_file}\" not a dot file"

    # Strip the basename from the passed filename and concoct new filenames.
    local pdf_file="$(get_filename_sans_filetype "${dot_file}").pdf"

    # View us into a new broken world.
    utter "viewing \"${pdf_file}\"..."
    try zview "${pdf_file}" &
}

