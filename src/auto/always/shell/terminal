#!/usr/bin/env zsh
# ====================[ terminal                           ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Terminal.

# ....................{ EXCEPTIONS                         }....................
# void die_unless_terminal(char *error_message = 'not a terminal')
#
# Raise an exception unless the current shell outputs to a terminal display.
die_unless_terminal() {
    die_unless_at_most_one_argument 'expected optional error message'
    is_terminal or die "${1:-not printing to a terminal}"
}

# ....................{ TESTS                              }....................
# bool is_terminal(void)
#
# Return true if the current shell outputs to a terminal display. This is
# especially helpful for avoiding running "stty" on non-terminals (e.g., cron)
# and hence errors resembling:
#
#     stty: standard input: Invalid argument
is_terminal() {
    die_unless_no_arguments
    is -t 0 si
}

# ....................{ GETTERS                            }....................
# int get_terminal_height(void)
#
# Get the height in characters of the current terminal.
get_terminal_height() {
    die_unless_no_arguments
    die_unless_terminal
    print "${LINES}"
}

# int get_terminal_width(void)
#
# Get the width in characters of the current terminal.
get_terminal_width() {
    die_unless_no_arguments
    die_unless_terminal
    print "${COLUMNS}"
}

