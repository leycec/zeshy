#!/usr/bin/env zsh
# ====================[ shntool                            ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Configure "shntool", a lossless audio file processor.

# ....................{ RSYNC                              }....................
declare_global '
list ZESHY_SHNTOOL_OPTIONS

"shntool" options specific to the *_audio_lossless*() functions.
'
ZESHY_SHNTOOL_OPTIONS=(
)

declare_global '
list ZESHY_SHNTOOL_OPTIONS_IF_SHELL_INTERACTIVE

"shntool" options if run interactively.
'
ZESHY_SHNTOOL_OPTIONS_IF_SHELL_INTERACTIVE=(
    -P face
)

declare_global '
list ZESHY_SHNTOOL_OPTIONS_IF_SHELL_NONINTERACTIVE

"shntool" options if run non-interactively.
'
ZESHY_SHNTOOL_OPTIONS_IF_SHELL_NONINTERACTIVE=(
    -q
    -O never  # never overwrite existing files when run non-interactively
)
