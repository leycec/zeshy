#!/usr/bin/env zsh
# ====================[ ncmpcpp                            ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy ncmpcpp, the ncrys "mpd" control application.

# ....................{ ALIASES                            }....................
alias_cli n='ncmpcpp'

# ....................{ FUNCTIONS                          }....................
ncmpcpp() {
    die_if_args

    # Start the local "mpd" server if not already running.
    if not is_command_running mpd; then
        print_message 'restarting mpd...'
        
        # If a baselayout-style "mpd" control script exists, run that;
        # otherwise, "mpd" itself.
        if is_path_executable      '/etc/init.d/mpd'
        then run_code_as_superuser '/etc/init.d/mpd restart'
        else run_code_as_superuser 'mpd --no-create-db'
        fi
    fi

    # Then "ncmpcpp".
    command ncmpcpp
}

