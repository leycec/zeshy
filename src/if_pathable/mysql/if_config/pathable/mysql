#!/usr/bin/env zsh

declare_parcel_as_script_with_stdin <<'-/-'
Configure `zeshy`-specific MySQL functionality.
-/-

# ....................{ MYSQL                              }....................
#FIXME: Rename to ${ZESHY_OPTIONS_SHELL_MYSQL}.
declare_global_with_stdin <<'/---'
list ZESHY_MYSQL_SHELL_OPTIONS

`zeshy`-specific `mysql` options (e.g., for mysql_shell()).
/---
ZESHY_MYSQL_SHELL_OPTIONS=(
    --auto-rehash
    --column-names
    --compress
    --ignore-case
    --line-numbers
    --named-commands
    --no-beep
    --pager=less
    --password
    --reconnect
    --secure-auth
    --show-warnings
    --sigint-ignore
    --skip-comments
    --table
)
