#!/usr/bin/env zsh

:parcel <<'/---'
Configure `zeshy`-specific MySQL functionality.
/---

# ....................{ ALIASES                            }....................
# See "00-core/alias" for further details.

#FIXME: Also define a substitution replacing "mysql" with such function.
ZESHY_ALIAS_CLI_ABBREVIATIONS+=(
    {my}sql{s}hell 'shell_mysql_with_options:'
)

# ....................{ MYSQL                              }....................
:list.global ZESHY_OPTIONS_MYSQL <<'/---'
`mysql` options for `zeshy`-specific MySQL functions (e.g.,
shell_mysql_with_options:()).
/---
ZESHY_OPTIONS_MYSQL=(
    --auto-rehash
    --column-names
    --compress
    --ignore-case
    --line-numbers
    --named-commands
    --no-beep
    --pager=less
    --password
    --reconnect
    --secure-auth
    --show-warnings
    --sigint-ignore
    --skip-comments
    --table
)
