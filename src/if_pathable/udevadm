# --------------------( SYNOPSIS                           )--------------------
# Zeshy udev.

# ....................{ PRINTERS                           }....................
# string print_udev_device(string device_filename)
#
# Print "udev"-specific information for the passed device. This function is particularly
# helpful for obtaining udev-associated "Product" and "Vendor" strings for a
# device, with which you may then write custom udev, X.org, etc. rules for
# dynamically configuring devices on "hot-plug."
print_udev_device() {
    # Validate passed arguments.
    die_unless_arg 'expected one device filename'
    string device_filename="${1}"
    die_unless_device "${device_filename}"

    # Print device information.
    say_first_section "udev device data for \"${device_filename}\""
    /sbin/udevadm info --query=all --name="${device_filename}"
    say_next_section "udev recursive attributes for \"${device_filename}\""
    /sbin/udevadm info --attribute-walk --name="${device_filename}"
}

# --------------------( WASTELANDS                         )--------------------
#   run_as_superuser udevadm info --query=all --name="${device_file}"
#   run_as_superuser udevadm info --attribute-walk --name="${device_file}"
# ....................{ ALIASES                            }....................
#interactive_alias udevdi="print_udev_device_info"
