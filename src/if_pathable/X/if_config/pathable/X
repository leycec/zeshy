#!/usr/bin/env zsh

declare_parcel_as_script_with_stdin <<'-/-'
Configure `zeshy`-specific X11 functionality.
-/-

# ....................{ PATHS                              }....................
declare_global_with_stdin\
    string ZESHY_X_LOG_FILENAME="${HOME}/.xsession" <<'/---'
Absolute path of the file to which start_x() logs standard output and error.
/---

# ....................{ ALIASES                            }....................
# See "00-core/alias" for further details.

ZESHY_ALIAS_CLI_ABBREVIATIONS+=(
    {l}s{xf}ont 'print_x_fonts'
)
ZESHY_ALIAS_CLI_SUBSTITUTIONS+=(
    {s}tart{x} 'start_x'
)
