#!/usr/bin/env zsh
# ====================[ zsh                                ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Configure basic zsh settings.

# ....................{ DECLARATIONS                       }....................
integer_global_export\
    HISTSIZE\
    SAVEHIST
string_global_export HISTFILE

# ....................{ HISTORY                            }....................
document_global '
integer HISTSIZE

Maximum number of lines of zsh command-line history to persist.
'
HISTSIZE="${HISTSIZE:-1024}"

document_global '
integer SAVEHIST

Maximum number of lines of zsh command-line history to retain between logins.
'
SAVEHIST="${SAVEHIST:-1024}"

document_global '
string HISTFILE

File to which zsh persists command-line history.
'
HISTFILE="${HISTFILE:-${ZESHY_DOT_DIR}/history}"
