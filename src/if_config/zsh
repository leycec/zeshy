#!/usr/bin/env zsh
# ====================[ zsh                                ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Configure zsh-specific settings.

# ....................{ DIRSTACK                           }....................
declare_global_with_stdin <<'________________<heredoc?>________________'
integer DIRSTACKSIZE

Maximum directory stack height. Once full, pushing new directories onto the
directory stack implicitly pops that number of directories off the end of the
directory stack. Setting this to 0 or the empty string disables such behavior
(i.e., permits arbitrarily large directory stacks).
________________<heredoc?>________________
DIRSTACKSIZE=16

# ....................{ HISTORY                            }....................
#FIXME: Since the dot directory can be changed from the command-line, this
#probably isn't quite right. Indeed, this should really be pushed out of this
#file and into the Zeshy codebase. (Unsure quite where, of course...)
declare_global_with_stdin <<'________________<heredoc?>________________'
string HISTFILE

Absolute path of the file persisting command-line history.
________________<heredoc?>________________
HISTFILE="${ZESHY_DOT_CACHE_DIR}/history"

declare_global_with_stdin <<'________________<heredoc?>________________'
integer HISTSIZE

Maximum number of history lines to persist to ${HISTFILE}.
________________<heredoc?>________________
HISTSIZE=1048576

declare_global_with_stdin <<'________________<heredoc?>________________'
integer SAVEHIST

Maximum number of history lines to retain between logins.
________________<heredoc?>________________
SAVEHIST="${HISTSIZE}"
