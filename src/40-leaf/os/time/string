# --------------------( SYNOPSIS                           )--------------------
# Handle system time in string format.

# ....................{ GETTERS                            }....................
declare_function '
string get_time_string()

Get the current date and time as a locale-dependent string: e.g.,

    >>> get_time_string
    Mon 6 Mar 1945 09:15:00 AM 1945
'
function get_time_string() {
    die_if_args
    date +'%c'
}

declare_function '
string get_time_hhmmss()

Get the current time in 24-hour clock format: e.g.,

    >>> get_time_hhmmss
    12:30:01
'
function get_time_hhmmss() {
    die_if_args
    date +'%T'
}

declare_function '
string get_time_hhmmss_in_12_hour_clock()

Get the current time in locale-dependent 12-hour clock format: e.g.,

    >>> get_time_hhmmss_in_12_hour_clock
    12:30:01 PM
'
function get_time_hhmmss_in_12_hour_clock() {
    die_if_args
    date +'%r'
}

# ....................{ GETTERS ~ name                     }....................
declare_function '
string get_time_month_name()

Get the current month as a locale-dependent name: e.g.,

    >>> get_time_month_name
    December
'
function get_time_month_name() {
    die_if_args
    date +'%B'
}

declare_function '
string get_time_month_name_abbreviated()

Get the current month as a locale-dependent abbreviated name: e.g.,

    >>> get_time_month_name_abbreviated
    Dec
'
function get_time_month_name_abbreviated() {
    die_if_args
    date +'%b'
}

declare_function '
string get_time_weekday_name()

Get the current day of the week as a locale-dependent name: e.g.,

    >>> get_time_weekday_name
    Sunday
'
function get_time_weekday_name() {
    die_if_args
    date +'%A'
}

declare_function '
string get_time_weekday_name_abbreviated()

Get the current day of the week as a locale-dependent abbreviated name: e.g.,

    >>> get_time_weekday_name_abbreviated
    Sun
'
function get_time_weekday_name_abbreviated() {
    die_if_args
    date +'%a'
}

# ....................{ GETTERS ~ date                     }....................
declare_function '
string get_date_yyyymmdd()

Get the current date in ISO 8601 format: e.g.,

    >>> get_date_yyyymmdd
    1941-12-07
'
function get_date_yyyymmdd() {
    die_if_args
    date +'%F'
}

declare_function '
string get_date_ddmmyyyy()

Get the current date in reverse ISO 8601 format: e.g.,

    >>> get_date_ddmmyyyy
    07-12-1941
'
function get_date_ddmmyyyy() {
    die_if_args
    date +'%d-%m-%Y'
}

declare_function '
string get_date_mmddyy_slashed()

Get the current date in North American format: e.g.,

    >>> get_date_mmddyy_slashed
    12/07/41
'
function get_date_mmddyy_slashed() {
    die_if_args
    date +'%D'
}

# --------------------( WASTELANDS                         )--------------------
#   Mon Mar 6 09:15:00 1945
