#!/usr/bin/env zsh
# ====================[ mysql                              ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy MySQL configuration file.

# ....................{ DECLARATIONS                       }....................
# For readability, declare variables prior to their definition below.
list_global_export ZESHY_MYSQL_SHELL_OPTIONS

# ....................{ MYSQL                              }....................
# mysql_shell()-specific MySQL shell options.
ZESHY_MYSQL_SHELL_OPTIONS=(
    --pager=less
    --auto-rehash
    --column-names
    --compress
    --ignore-case
    --line-numbers
    --named-commands
    --no-beep
    --password
    --reconnect
    --secure-auth
    --show-warnings
    --sigint-ignore
    --skip-comments
    --table
)
