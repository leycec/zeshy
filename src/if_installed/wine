#!/usr/bin/env zsh
# ====================[ wine                               ]====================
#
# --------------------( LICENSE                            )--------------------
# Copyright 2007-2012 by Cecil Curry.
# See "COPYING" for additional details.
#
# --------------------( SYNOPSIS                           )--------------------
# Handle Wine, the popular Windows API compatibility layer.

# ....................{ ALIASES                            }....................
interactive_abbreviation {wi}ne='wine'
interactive_abbreviation {exp}lorer='wine_explorer'
interactive_abbreviation {i}nternet{e}xplorer='wine_internet_explorer'
interactive_abbreviation {n}ote{p}ad='wine_notepad'
interactive_abbreviation {w}ord{p}ad='wine_wordpad'

# Run Windows executables under Wine.
suffix_alias exe='wine'

# Run Windows installers under Wine's "MSI Installer" implementation.
suffix_alias msi='msiexec'

# ....................{ CONFIGURERS                        }....................
# void configure_wine(void)
#
# Graphically configure Wine under the current user.
function configure_wine() {
    die_if_args
    run_disowned winecfg
}

# void configure_wine_windows(void)
#
# Graphically configure Windows under the current user with Wine's "Control
# Panel" implementation.
function configure_wine_windows() {
    die_if_args
    run_disowned wine control
}

# void configure_wine_windows_registry(void)
#
# Graphically edit the system-wide Windows registry under the current user with
# Wine's "regedit32" implementation.
function configure_wine_windows_registry() {
    die_if_args
    run_disowned wine regedit
}

# ....................{ APPLICATIONS                       }....................
# void wine_explorer(void)
#
# Run Wine's "Explorer" implementation.
function wine_explorer() {
    die_if_args
    run_disowned wine explore
}

# void wine_internet_explorer(string filename = '')
#
# Run Wine's "Internet Explorer" implementation.
function wine_internet_explorer() {
    run_disowned wine iexplore "${@}"
}

# void wine_notepad(string filename = '')
#
# Run Wine's "Notepad" implementation.
function wine_notepad() {
    run_disowned wine notepad "${@}"
}

# void wine_wordpad(string filename = '')
#
# Run Wine's "Wordpad" implementation.
function wine_wordpad() {
    run_disowned wine wordpad "${@}"
}

# --------------------( WASTELANDS                         )--------------------
# ....................{ EDITORS                            }....................
