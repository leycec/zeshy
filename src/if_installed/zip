#!/usr/bin/env zsh
# ====================[ zip                                ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy zip.

# ....................{ COMPRESSION                        }....................
# void zip_dir(string dirname = '.')
#
# Recursively zip the passed dirname into an archive with the same filename
# suffixed by ".zip" under the current directory.
zip_dir() {
    die_unless_at_most_one_arg 'expected one optional dirname'
#   string ZESHY_SCRIPT_NAME='zip_dir'
    archive_dir zip\
        zip '-r' ''\
        unzip '-l' ''\
        "${@}" 
}

# void zip_file(string filename1, string filename2, ...)
#
# Iteratively zip each passed filename into an archive with the same filename
# suffixed by ".zip" under the current directory.
zip_file() {
    die_unless_at_least_one_arg 'expected at least one filename'
#   string ZESHY_SCRIPT_NAME='zip_file'
    for filename ("${@}") {
        archive_file zip\
            zip '' ''\
            unzip '-l' ''\
            "${filename}" 
        shift
    }
}

