#!/usr/bin/env zsh
# ====================[ time                               ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Time. This Zeshy component implements date and time functionality.

# ....................{ CASE                               }....................
# int get_current_time_in_seconds_since_epoch()
#
# Get the current time in seconds since the Unix epoch (i.e., 1970-01-01
# 00:00:00 UTC).
get_current_time_in_seconds_since_epoch() {
    [[ "${#}" -eq 0 ]] || die 'expected no arguments'
    try date +'%s'
}

