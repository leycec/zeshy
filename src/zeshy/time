#!/usr/bin/env zsh
# ====================[ time                               ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Time. This Zeshy component implements date and time functionality.

# ....................{ DATES                              }....................
# Aliases.
alias d="date"

# ....................{ CALENDAR                           }....................
# Aliases.
alias calq="print_calendar_this_quarter"
alias caly="print_calendar_this_year"
alias calyn="print_calendar_next_year"

# char *calendar_this_quarter(void)
#
# Print a Gregorian calendar corresponding to the current "quarter" (i.e., the
# previous month, the current month, and the next month).
calendar_this_quarter() {
    die_unless_no_arguments
    try cal -3
}

# char *calendar_this_year(void)
#
# Print a Gregorian calendar corresponding to the current year.
calendar_this_year() {
    die_unless_no_arguments
    try cal -y
}

# char *calendar_next_year(void)
#
# Print a Gregorian calendar corresponding to the next year.
calendar_next_year() {
    die_unless_no_arguments
    try cal $(get_next_year)
}

# ....................{ DATE                               }....................
# int get_this_year(void)
#
# Get the current year as a four-digit integer (e.g., 1776).
get_this_year() {
    die_unless_no_arguments
    try date +'%Y'
}

# int get_next_year(void)
#
# Get the next year as a four-digit integer (e.g., 1776).
get_next_year() {
    die_unless_no_arguments
    echo $(( $(get_this_year) + 1 ))
}

# ....................{ TIME ~ current                     }....................
# int get_current_date()
#
# Get the current date (i.e., 1970-01-01).
get_current_date() {
    die_unless_no_arguments
    try date +'%F'
}

# int get_current_time_in_seconds_since_epoch()
#
# Get the current time in seconds since the Unix epoch (i.e., 1970-01-01
# 00:00:00 UTC).
get_current_time_in_seconds_since_epoch() {
    die_unless_no_arguments
    try date +'%s'
}

