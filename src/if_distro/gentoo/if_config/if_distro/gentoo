#!/usr/bin/env zsh
# ====================[ gentoo                             ]====================
#
# --------------------( SYNOPSIS                           )--------------------
# Configure Zeshy-specific Gentoo behavior.

# ....................{ ALIASES                            }....................
# See "00-alias" for further details.
ZESHY_INTERACTIVE_ABBREVIATIONS+=(
    # Ebuilds.
    {e}build{q}uery{e}build     'print_ebuild'
    {e}build{q}uery{i}nstalling 'print_ebuilds_installing_path'

    # Overlays.
    {e}build{o}verlay{a}dd    'add_gentoo_overlay'
    {e}build{o}verlay{r}emove 'remove_gentoo_overlay'
    {e}build{o}verlay{p}rint  'print_gentoo_overlays'

    # Portage.
    {em}erge             'emerge'
    {em}erge{n}ews       'print_portage_news_unread'
    {em}erge{w}orld      'emerge_world'
    {em}erge{p}ortage    'update_portage'
    {e}merge{q}uery{u}se 'print_use_flag_matches'
    {em}erge{u}ninstall  'emerge --depclean'

    #FIXME: Ideally, if "eq" reports only one ebuild it should also call
    #print_ebuild() on such ebuild. This suggests a new function wrapping such use.
    {e}build{q}uery 'print_ebuild_pcre_matches'
)
