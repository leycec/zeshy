#!/usr/bin/env zsh
# ====================[ layman                             ]====================
#
# --------------------( LICENSE                            )--------------------
# Copyright 2007-2013 by Cecil Curry.
# See "COPYING" for additional details.
#
# --------------------( SYNOPSIS                           )--------------------
# Handling Gentoo overlays.
#
# --------------------( USAGE                              )--------------------
# To add local overlays, manually edit "/etc/layman/layman.cfg" and append an
# entry to the "overlays" variable prefixed by "file:///" succeeded by the
# absolute path to that overlay's "overlay.xml" file: e.g.,
#
# overlays  : http://www.gentoo.org/proj/en/overlays/repositories.xml
#             http://gpo.zugaina.org/lst/gpo-repositories.xml
#             file:///home/leycec/bash/raia-gentoo/overlay.xml
#
# --------------------( TODO                               )--------------------
# * Generalize so as to support Paludis, which provides parallel functionality
#   to "layman".
# * Shift to "gentoo/always/overlay".

# ....................{ ALIASES                            }....................
interactive_abbreviation {lay}man='layman'
interactive_abbreviation {lay}list='print_gentoo_overlays'
interactive_abbreviation {lay}add='add_gentoo_overlay'
interactive_abbreviation {lay}remove='remove_gentoo_overlay'

# ....................{ TESTERS                            }....................
document_function '
boolean is_gentoo_overlay_command_installed(void)

Return true if at least one command for managing overlays has been installed.
'
function is_gentoo_overlay_command_installed() {
    is_pathable layman
}

# ....................{ PRINTERS                           }....................
document_function '
string print_gentoo_overlay(string overlay_name)

Print human-readable data on the passed currently added overlay.
'
function print_gentoo_overlay() {
    die_unless_arg 'expected one overlay name'
    layman --info="${1}"
}

document_function '
string print_gentoo_overlays(void)

Print all currently added overlays.
'
function print_gentoo_overlays() {
    die_if_args

    {
        say_heading 'overlays added'
        layman --list-local

        print_newline
        say_heading 'overlays (all)'
        layman --list
    } | page_string
}

# ....................{ ADDERS                             }....................
document_function '
void add_gentoo_overlay(string overlay_name, int priority = 50)

Add the passed overlay with the passed priority (defaulting to 50). If "ALL",
add all addable overlays. By default, the global Portage tree has a priority
of -1000. Since higher priority overlays take precedence over lower priority
overlays, this implies overlays added with default precedence take precedence
over the global Portage tree -- usually (but not always) what you want.
'
function add_gentoo_overlay() {
    die_unless_args_1_to_2 'expected one overlay name and optional priority'
    layman --fetch --add="${1}" --priority="${2:-50}"
}

# ....................{ REMOVERS                           }....................
document_function '
void remove_gentoo_overlay(string overlay_name)

Remove the passed overlay. If "ALL", remove all currently added overlays.
'
function remove_gentoo_overlay() {
    die_unless_arg 'expected one overlay name'
    layman --delete="${1}"
}

# ....................{ UPDATERS                           }....................
document_function '
void update_gentoo_overlay(string overlay_name)

Update the passed added overlay. If "ALL", update all added overlays as under
update_gentoo_overlays().
'
function update_gentoo_overlay() {
    die_unless_arg 'expected one overlay name'
    layman --sync="${1}"
}

document_function '
void update_gentoo_overlays(void)

Update all added overlays and the list of addable overlays.
'
function update_gentoo_overlays() {
    # "layman" fails with non-zero status if at least one overlay fails to
    # update. Since this routinely occurs (e.g., if a remote overlay is
    # temporarily unavailable), ignore such failure.
    die_if_args
    layman --sync-all or true
}

