#!/usr/bin/env zsh
# ====================[ time                               ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Time, implementing date- and time-handling functionality.

# ....................{ ALIASES                            }....................
interactive_alias d="date"

# ....................{ GETTERS                            }....................
# char *get_date_iso_8601()
#
# Get the current date in ISO 8601 format (e.g., 1970-01-01).
get_date_iso_8601() {
    die_if_args
    date +'%F'
}

# int get_time_unix()
#
# Get the current time in seconds since the Unix epoch (e.g., 3141592653).
get_time_unix() {
    die_if_args
    date +'%s'
}

# int get_year(void)
#
# Get the current year as a four-digit integer (e.g., 1776).
get_year() {
    die_if_args
    date +'%Y'
}

# ....................{ PRINTERS                           }....................
# char *print_calendar_quarter(void)
#
# Print a Gregorian calendar of the current "quarter" (i.e., previous, current,
# and next month).
print_calendar_quarter() {
    die_if_args
    cal -3
}

# char *print_calendar_year(void)
#
# Print a Gregorian calendar of the current year.
print_calendar_year() {
    die_if_args
    cal -y
}

# char *print_calendar_year_next(void)
#
# Print a Gregorian calendar of the next year.
print_calendar_year_next() {
    die_if_args
    cal $(( $(get_year) + 1 ))
}

#FIXME: Obsolete.
