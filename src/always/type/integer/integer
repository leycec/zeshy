# --------------------( SYNOPSIS                           )--------------------
# Zeshy Integer, handling core integer functionality.

# ....................{ EXCEPTIONS                         }....................
# void die_unless_integer(
#   char *variable_name, char *error_message = 'not an integer type')
#
# Throw an exception unless the variable with the passed name is an integer type
# (i.e., declared as either "integer" or "global_decimal").
die_unless_integer() {
    die_unless_one_or_two_args\
        'expected one variable name and optional error message'
    is_integer "${1}" or die "${2:-\"${1}\" not an integer type}"
}

# ....................{ TESTS                              }....................
# bool is_integer(char *variable_name)
#
# Return true if the variable with the passed name has type "integer".
is_integer() {
    die_unless_one_arg 'expected one variable name'
    is $(get_type "${1}") == 'integer'* si
}

# --------------------( WASTELANDS                         )--------------------
