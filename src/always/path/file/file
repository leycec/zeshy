# --------------------( SYNOPSIS                           )--------------------
# Handle non-directory files.

# ....................{ EXCEPTIONS                         }....................
document_function '
void die_unless_file(
  string pathname,
  string error_message = "\"${pathname}\" not a file")

Throw an exception with the passed message unless the passed path is an existing
non-directory file.
'
function die_unless_file() {
    die_unless_args_1_to_2\
        'expected one pathname and optional error message'
    string pathname="${1}"
    is_file "${pathname}" or die "${2:-\"${pathname}\" not a file}"
}

# ....................{ EXCEPTIONS ~ emptiness             }....................
document_function '
void die_unless_file_nonempty(
  string pathname,
  string error_message = "\"${pathname}\" 0 bytes or not a file")

Throw an exception with the passed message unless the passed path is an existing
non-directory non-0-byte file. See is_file_nonempty() for further details.
'
function die_unless_file_nonempty() {
    die_unless_args_1_to_2\
        'expected one pathname and optional error message'
    string pathname="${1}"
    is_file_nonempty "${pathname}" or
        die "${2:-\"${pathname}\" 0 bytes or not a file}"
}

# ....................{ TESTERS                            }....................
document_function '
boolean is_file(string pathname)

Return true if the passed path is an existing non-directory file.
'
function is_file() {
    die_unless_arg 'expected one pathname'
    string pathname="${1}"
    is -e "${pathname}" and not -d "${pathname}" si
}

# ....................{ TESTERS ~ emptiness                }....................
document_function '
boolean is_file_empty(string pathname)

Return true if the passed path is an existing non-directory 0-byte file.
'
function is_file_empty() {
    die_unless_arg 'expected one pathname'
    string pathname="${1}"
    is_file "${pathname}" and not is -s "${pathname}" si
}

document_function '
boolean is_file_nonempty(string pathname)

Return true if the passed path is an existing non-directory non-0-byte file
(i.e., a file with contents at least one byte in size).
'
function is_file_nonempty() {
    die_unless_arg 'expected one pathname'
    string pathname="${1}"
    is_file "${pathname}" and is -s "${pathname}" si
}

