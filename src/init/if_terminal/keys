#!/usr/bin/env zsh
# ====================[ keys                               ]====================
#                     [ Time-stamp: "2009-04-18 19:29:36 leycec" ]
#
# --------------------( SYNOPSIS                           )--------------------
# Zeshy Keys, implementing general-purpose key bindings: e.g.,
#
# * <Alt-P>,  search history for commands starting with "this."
# * <Ctrl-R>, search history for commands containing "this."

# ....................{ KEY BINDINGS                       }....................
# void _zeshy_keys_expand_dots(void)
#
# Implicitly expand "..." to "../.." while typing.
_zeshy_keys_expand_dots() {
    #die_unless_no_arguments
    if is "${LBUFFER}" == *'..' si
    then LBUFFER+='/..'
    else LBUFFER+='.'
    fi
}

# ....................{ MAIN                               }....................
_zeshy_keys() {
    # Disable flow control key bindings, which increasingly conflict with those of
    # popular command-line applications (e.g., irssi, rtorrent). Specifically,
    # prevent <Ctrl-s> and <Ctrl-q> from disabling and enabling flow control.
    is_terminal and stty -ixon -ixoff

    # Use Emacs- rather than Vi-style key bindings at the command line.
    bindkey -e

    # Implicitly expand "..." to "../.." while typing.
    zle -N    _zeshy_keys_expand_dots
    bindkey . _zeshy_keys_expand_dots
}

_zeshy_keys
unfunction _zeshy_keys

